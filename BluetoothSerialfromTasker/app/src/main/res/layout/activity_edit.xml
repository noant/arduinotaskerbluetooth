<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/mac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:hint="00:11:22:AA:BB:CC (Paired MAC Address)" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:maxLength="500"
        android:text="Show all paired devices" />

    <RadioGroup
        android:id="@+id/rgCommands"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/rbEnableBatteryPriority"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:tag="eco=1"
            android:text="Turn on battery priority" />

        <RadioButton
            android:id="@+id/rbDisableBatteryPriority"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:tag="eco=0"
            android:text="Turn off battery priority" />
    </RadioGroup>


</LinearLayout>